<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:orientation="horizontal">
    <TextView
        android:layout_weight="0.2  "
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <com.example.administrator.hyxdmvp.base.DropDownView

        android:id="@+id/drop_down_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:background="@drawable/shape_background_custom"
        android:drawableRight="@mipmap/pic_confirm_dropdown"
        android:gravity="center"
        android:padding="3dp"
        android:text="请选择名字"
        android:textColor="#4c4c4c"
        android:textColorHint="#55000000"
        android:textSize="10sp" />
        <TextView
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/time_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:background="@drawable/shape_background_custom"
        android:gravity="center"
        android:padding="3dp"
        android:text="1970-01-01"
        android:textSize="10sp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="到"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/time_end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:background="@drawable/shape_background_custom"
        android:gravity="center"
        android:padding="3dp"
        android:text="2100-01-01"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.7"
        android:padding="15dp"
        android:src="@mipmap/search" />

    <ImageView
        android:id="@+id/reset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.7"
        android:padding="15dp"
        android:src="@mipmap/reset" />

</LinearLayout>
